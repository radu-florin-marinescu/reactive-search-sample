<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ReactiveSearchSample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ReactiveSearchSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextComponent" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Header" parent="TextComponent">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Header.L">
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="Header.M">
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>

    <style name="Header.S">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="Text" parent="TextComponent">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Text.L">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

</resources>